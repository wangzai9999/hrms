<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.DepartmentDao">

    <resultMap id="dposmap" type="department">
        <id property="id" column="de_id"/>
        <result property="text" column="de_name"/>
        <collection property="children" column="de_id" ofType="position" select="com.dao.PositionDao.getAllByDid" fetchType="eager"/>
    </resultMap>
    <select id="getAll" resultMap="dposmap">
        select * from department
    </select>

</mapper>